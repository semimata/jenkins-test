pipeline{
    agent{
        docker{
            image 'nodejs:8.16-0.alpine'
        }        
    }
    
    stages{
        stage('build'){
            when{
                 changeset "**/result/**"
            }
            steps{
                echo 'compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
         stage('test'){
            when{
                 changeset "**/result/**"
            }
            steps{
                echo 'Running Unit Test on result app'
                dir('result'){
                   sh 'npm test'
                }
            }
        }
    }
}