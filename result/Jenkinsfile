pipeline{
    agent any

    tools{
        nodejs 'NodeJS 8.9.0'
    }
    
    stages{
        stage('build'){
            when{
                 changeset "**/result/**"
            }
            steps{
                echo 'compiling result app'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
         stage('test'){
            when{
                 changeset "**/result/**"
            }
            steps{
                echo 'Running Unit Test on result app'
                dir('result'){
                   sh 'npm test'
                }
            }
        }
    }
}